{
  "compilerOptions": {
    "jsx":"react",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "outDir": "built"
  },
  "files": [
    "app.module.ts",
    "main.ts"
  ],

  "angularCompilerOptions": {
   "annotateForClosureCompiler": true
  }
}