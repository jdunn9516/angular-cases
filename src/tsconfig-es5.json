{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "built-es5"
  },
  "files": [
    "./app/app.module.ts",
    "./app/main.ts"
  ],

  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "annotationsAs": "static fields",
    "genDir": "app/aot",
    "preserveWhitespaces": false
  }
}