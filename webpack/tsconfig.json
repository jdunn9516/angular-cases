{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "/usr"
  },
  
  "files": [
    "/usr/src/apps/main-demo-app/app.module.ts",
    "/usr/src/apps/main-demo-app/main.ts"
  ],

  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "preserveWhitespaces": false
  }
}